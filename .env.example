# ==========================================
# Real Estate Direct - Environment Variables
# ==========================================

# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database
MONGO_URI=mongodb://localhost:27017/real-estate-direct

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Email Service
# Options: sendgrid, mailgun, ses, local
EMAIL_PROVIDER=local
EMAIL_FROM=noreply@realestatedirect.ca
EMAIL_FROM_NAME=Real Estate Direct

# SendGrid (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun (if EMAIL_PROVIDER=mailgun)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.mailgun.org

# AWS SES (if EMAIL_PROVIDER=ses)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# E-Signature Service
# Options: docusign, hellosign, local
ESIGN_PROVIDER=local
ESIGN_API_KEY=your-esign-api-key
ESIGN_ACCOUNT_ID=your-account-id
ESIGN_WEBHOOK_SECRET=your-webhook-secret

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
